<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.iutlens.vanhaecke.amazeing"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_perso"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_perso_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AMAZEIng">

        <activity
            android:name="fr.iutlens.vanhaecke.amazeing.SplashScreenActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.iutlens.vanhaecke.amazeing.MainActivity" />
        <activity android:name="fr.iutlens.vanhaecke.amazeing.LabyrintheActivity" />

    </application>

</manifest>